{
  "compilerOptions": {
    /* ---------- Основные настройки ---------- */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    /* ---------- Пути и алиасы ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@context/*": ["app/context/*"],
      "@ui/*": ["components/ui/*"],
      "@lib/*": ["lib/*"]
    },

    /* ---------- Плагины ---------- */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* ---------- Включаемые файлы ---------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* ---------- Исключаемые файлы ---------- */
  "exclude": ["node_modules"]
}
